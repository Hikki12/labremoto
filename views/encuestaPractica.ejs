<%- include("template/cabecera", {titleWeb: 'Encuesta de la práctica' }) %>


    <!-- NAV -->
<%- include("template/nav") %>
    <br><br>
    <!-- body -->


        <body>
            <div class="main">
                <section id="benefits" class="features">

                    <div class="text-center">
                        <h1>Encuesta de finalización de práctica</h1>
                        <i>
                            <h4>Encuesta Final</h4>
                        </i>
                        <br>
                        <p><i>Seleccione el nombre de la práctica que temina de realizar.</i></p>
                        <div>

                            <% for( var i=0; i < result2.length; i++) { %>
                                <button class="btn-outline-info  btn" id="entrar-<%- result2[i].codeModel2 %>"
                                    onclick="myFunction<%- result2[i].codeModel2 %>()">
                                    <%- result2[i].codeModel %>
                                    <input type="text" id="number<%= result2[i].codeModel2 %>"
                                    value="<%= result2[i].codeModel2 %>" style="display: none" />
                                </button>
                                <% } %>
                        </div>
                    </div>
                    <br>
                    <hr class="col-sm-10">
                    <br>
                    <%if (rol=="estudiante" || rol=="docente" || rol=="admin" ) { %>
                        <div class="container-fluid text-center col-md-8 ">

                            <div class="card ">
                                <div class="card-header">
                                    Registro de maqueta nueva.
                                </div>

                                <div class="card-body ">
                                    <center>
                                        <% if (message.length> 0) { %>
                                            <div class="alert alert-danger">
                                                <%= message %>
                                                    <br>
                                                    <i>La maqueta ya se encuentra registrada</i>
                                            </div>
                                            <% } %>
                                                <form class="col-md-10" action="/SaveEncuestaPractica" method="POST">
                                                    <p class="text-left"><strong><i>Crear maqueta: </i></strong></p>
                                                    <div class="form-group row">
                                                        <label for="codeModel2" class="col-sm-2 col-form-label">Código
                                                            de la maqueta </label>

                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control"
                                                                placeholder="Código (Ejm: mcu-11)"
                                                                value="<%= result2.codeModel %>" name="codeModel"
                                                                required>

                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="lastName2" class="col-sm-2 col-form-label">Nombre de
                                                            maqueta </label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control"
                                                                placeholder="Nombre..." value="<%= result2.nameModel %>"
                                                                name="nameModel" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="staticsubtitlesModel"
                                                            class="col-sm-2 col-form-label">Subtítulo</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control"
                                                                placeholder="Subtítulo"
                                                                value="<%= result2.subtitlesModel %>"
                                                                name="subtitlesModel" required>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label for="mockup2" class="col-2 col-form-label">Descripción de
                                                            la maqueta</label>
                                                        <div class="col-10">
                                                            <textarea name="description" id="" cols="62" rows="6"
                                                                required><%= result2.description %>
                                                            </textarea>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label for="startTime2" class="col-2 col-form-label">URL de la
                                                            maqueta
                                                        </label>
                                                        <div class="col-10">

                                                            <input type="text" name="urlMaqueta" id="inputurlMaqueta"
                                                                class="form-control" value="<%= result2.urlMaqueta %>"
                                                                required="required">
                                                        </div>
                                                    </div>

                                                    <center>
                                                        <button type="submit"
                                                            class="btn btn-outline-success btn-lg">Añadir</button>
                                                    </center>
                                                </form>
                                    </center>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </section>
            </div>
            <p id="demo"></p>
            <% for( var i=0; i < result2.length; i++) { %>
                <script>
                    function myFunction<%- result2[i].codeModel2 %>() {
                        //obtener valor del id
                        var codeMockup<%- result2[i].codeModel2 %> = $('#number<%= result2[i].codeModel2 %> ').val();
                        var codeResult<%- result2[i].codeModel2 %> = '<%= result2[i].codeModel2 %>';
                        console.log("Codigo maqueta HTML: ", codeMockup<%- result2[i].codeModel2 %>);
                        
                        document.getElementById("demo").innerHTML = "Hello World <%- result2[i].codeModel %>";
                        //obtener valor del id
                        if(codeMockup<%- result2[i].codeModel2 %> == codeResult<%- result2[i].codeModel2 %>){   
                            $(codeResult<%- result2[i].codeModel2 %>).show();
                        } else{
                            $('#entrar-<%= result2[i].codeModel2 %> ').hide();
                        }   
                    }
                </script>
            <% } %>
            
        <%- include("template/footer") %>
    </body>