<%- include("template/cabecera", {titleWeb: 'Añadir más maquetas'})  %>


<!-- NAV -->
<%- include("template/nav") %>
<br><br>
<!-- body -->

<body>
    <div class="main">
        <section id="benefits" class="features">

            <div class="text-center">
                <h1>Añadir más maquetas</h1>
                <i>
                    <h4>Formulario de registro de más maquetas</h4>
                </i>
            </div>
            <br>
            <hr class="col-sm-10">
            <br>

            <div class="container-fluid text-center col-md-8 ">

                <div class="card ">
                    <div class="card-header">
                        Registro de maqueta nueva.
                    </div>

                    <div class="card-body ">
                        <center>
                            <% if (message.length > 0) { %>
                            <div class="alert alert-danger">
                                <%= message %>
                                <br>
                                <i>La maqueta ya se encuentra registrada</i>
                            </div>
                            <% } %>
                            <form class="col-md-10" action="/moremodels" method="post">
                                <p class="text-left"><strong><i>Crear maqueta: </i></strong></p>
                                <div class="form-group row">
                                    <label for="codeModel2" class="col-sm-2 col-form-label">Código de la maqueta </label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Código (Ejm: mcu-11)" value=""
                                            name="codeModel" required>
                                        
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastName2" class="col-sm-2 col-form-label">Nombre de maqueta </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Nombre..."
                                            value="" name="nameModel" required>
                                        
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="staticsubtitlesModel" class="col-sm-2 col-form-label">Subtítulo</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Subtítulo"
                                            value="" name="subtitlesModel" required>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label for="mockup2" class="col-2 col-form-label">Descripción de la maqueta</label>
                                    <div class="col-10">
                                        <textarea name="description" id="" cols="62" rows="6" required></textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="startTime2" class="col-2 col-form-label">URL de la maqueta</label>
                                    <div class="col-10">
                                        
                                        <input type="text" name="urlMaqueta" id="inputurlMaqueta" class="form-control" value="" required="required" >
                                        
                                        
                                    </div>
                                </div>
                                
                                <center>
                                    <button type="submit" class="btn btn-outline-success btn-lg">Añadir</button>
                                </center>
                            </form>
                        </center>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("template/footer") %>
</body>