<%- include("template/cabecera", {titleWeb: 'login'})  %>
<link rel="stylesheet" href="css/loginStyle.css">


<!-- NAV -->
<%- include("template/nav") %>
<br><br>
<body>
    <div class="main">
        <p class="sign" align="center">Inicio de sesión</p>
        
        <form action="/login" method="post" >
            <div class="form-group un">
                    
                <input type="email" class="form-control" placeholder="usuario@utpl.edu.ec"  name="username" required>
            </div>
            <div class="form-group pass">
                
                <input type="password" class="form-control" placeholder="Contraseña"  name="password" required>
            </div>
            <center>
                <button type="submit" class="btn btn-outline-info btn-lg">Entrar</button>
            </center>
            <br>
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            
            <p class="forgot" align="center"><a href="#">¿Olvidaste tu contraseña?</p>
                
        </form>
    </div>

    <script src="js/login.js"></script>
    <br><br>
    <%- include("template/footer") %>
</body>