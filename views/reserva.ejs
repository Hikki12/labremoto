<%- include("template/cabecera", {titleWeb: 'Reserva'})  %>


<!-- NAV -->
<%- include("template/nav") %>
<br><br>
<!-- body -->

<body>
    <div class="main">
        <section id="benefits" class="features">

            <div class="text-center">
                <h1>Reserva de uso de maqueta</h1>
                <i>
                    <h4>Formulario de reserva para usar la maqueta</h4>
                </i>
            </div>
            <br>
            <hr class="col-sm-10">
            <br>


            <div class="container-fluid text-center col-md-8 ">

                <div class="card ">
                    <div class="card-header">
                        Reserva de uso de maqueta

                    </div>

                    <div class="card-body ">
                        <center>
                            <% if (message.length > 0) { %>
                            <div class="alert alert-danger">
                                <%= message %>
                                <br>
                                <i>Si desea, reserve para otra fecha y hora</i>
                            </div>
                            <% } %>
                            <form class="col-md-10" action="/reserva" method="post">
                                <p class=" text-left">Datos del estudiante</p>
                                <div class="form-group row">
                                    <label for="name2" class="col-sm-2 col-form-label">Nombre</label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name" value="<%= names %>"
                                            name="name" style="display: none;">
                                        <input type="text" class="form-control" placeholder="name" value="<%= names %>"
                                            name="name2" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastName2" class="col-sm-2 col-form-label">Apellido</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name"
                                            value="<%= lastNames %>" name="lastName" style="display: none;">
                                        <input disabled type="text" class="form-control" placeholder="name"
                                            value="<%= lastNames %>" name="lastName2">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="staticEmail2" class="col-sm-2 col-form-label">email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name"
                                            value="<%= usernames %>@utpl.edu.ec" name="email" style="display: none;">
                                        <input disabled type="text" class="form-control" placeholder="name"
                                            value="<%= usernames %>@utpl.edu.ec" name="email2">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="date2" class="col-2 col-form-label">Date</label>
                                    <div class="col-10">
                                        <input class="form-control" type="date" id="date" name="date" required>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label for="mockup2" class="col-2 col-form-label">Maqueta </label>
                                    <div class="col-10">
                                        <select class="form-control form-control-sm" id="mockup" name="mockup" required>
                                            <option value="mcu-01">Maqueta 1</option>
                                            
                                        </select required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="startTime2" class="col-2 col-form-label">Start Time</label>
                                    <div class="col-10">
                                        <select class="form-control form-control-sm" id="startTime" name="startTime" required>
                                            <option>Seleccione...</option>
                                            <option>08:00:00</option>
                                            <option>09:00:00</option>
                                            <option>10:00:00</option>
                                            <option>11:00:00</option>
                                            <option>12:00:00</option>
                                            <option>13:00:00</option>
                                            <option>14:00:00</option>
                                            <option>15:00:00</option>
                                            <option>16:00:00</option>
                                            <option>17:00:00</option>
                                            <option>18:00:00</option>
                                            <option>19:00:00</option>
                                            <option>20:00:00</option>
                                            <option>21:00:00</option>
                                        </select >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="endTime2" class="col-2 col-form-label">End Time</label>
                                    <div class="col-10">
                                        <select class="form-control form-control-sm" id="endTime" name="endTime" required>
                                            <option>Seleccione...</option>
                                            <option>08:00:00</option>
                                            <option>09:00:00</option>
                                            <option>10:00:00</option>
                                            <option>11:00:00</option>
                                            <option>12:00:00</option>
                                            <option>13:00:00</option>
                                            <option>14:00:00</option>
                                            <option>15:00:00</option>
                                            <option>16:00:00</option>
                                            <option>17:00:00</option>
                                            <option>18:00:00</option>
                                            <option>19:00:00</option>
                                            <option>20:00:00</option>
                                            <option>21:00:00</option>
                                        </select >
                                        
                                    </div>
                                </div>
                                
                                <center>
                                    <button type="submit" class="btn btn-outline-success btn-lg">Reservar</button>
                                </center>
                            </form>
                        </center>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("template/footer") %>
</body>