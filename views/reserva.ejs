<%- include("template/cabecera", {titleWeb: 'Reserva'})  %>


<!-- NAV -->
<%- include("template/nav") %>
<br><br>
<!-- body -->

<body>
    <div class="main">
        <section id="benefits" class="features">

            <div class="text-center">
                <h1>Reserva de uso de maqueta</h1>
                <i>
                    <h4>Formulario de reserva para usar la maqueta</h4>
                </i>
            </div>
            <br>
            <hr class="col-sm-10">
            <br>


            <div class="container-fluid text-center col-md-8 ">

                <div class="card ">
                    <div class="card-header">
                        Reserva de uso de maqueta
                    </div>
                    
                    <div class="card-body ">
                        <center>
                            <form class="col-md-10" action="/reserva" method="post" >
                                <p class=" text-left">Datos del estudiante</p>
                                <div class="form-group row">
                                    <label for="name2" class="col-sm-2 col-form-label">Nombre</label>
                                    
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name"  value="<%= names %>" name="name" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastName2" class="col-sm-2 col-form-label">Apellido</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name"  value="<%= lastNames %>" name="lastName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="staticEmail2" class="col-sm-2 col-form-label">email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="name"  value="<%= usernames %>@utpl.edu.ec" name="email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="date2" class="col-2 col-form-label">Date</label>
                                    <div class="col-10">
                                        <input class="form-control" type="date" id="date" name="date">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="startTime2" class="col-2 col-form-label">Start Time</label>
                                    <div class="col-10">
                                        <input class="form-control" type="time" id="startTime" name="startTime">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="endTime2" class="col-2 col-form-label">End Time</label>
                                    <div class="col-10">
                                        <input class="form-control" type="time" id="endTime" name="endTime">
                                    </div>
                                </div>
                                <center>
                                    <button type="submit" class="btn btn-info btn-lg">Enviar</button>
                                </center>
                            </form>
                        </center>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("template/footer") %>
</body>